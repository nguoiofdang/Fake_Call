<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/call">

    <TextView
        android:id="@+id/tvCallFrom"
        style="@style/Base.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cuoc goi tu"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvCallerName"
        style="@style/Base.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cu Em"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCallFrom" />

    <TextView
        android:id="@+id/tvPhone"
        style="@style/Base.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Di dong  "
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/tvNumberPhone"
        app:layout_constraintStart_toStartOf="@id/tvCallerName"
        app:layout_constraintTop_toBottomOf="@id/tvCallerName" />

    <TextView
        android:id="@+id/tvNumberPhone"
        style="@style/Base.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0392 747 017"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/tvPhone"
        app:layout_constraintEnd_toEndOf="@id/tvCallerName"
        app:layout_constraintStart_toEndOf="@id/tvPhone"
        app:layout_constraintTop_toTopOf="@id/tvPhone" />

    <TextView
        android:id="@+id/tvInstructionUp"
        style="@style/Base.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Vuot len de bat dau"
        android:textColor="#797979"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/sbCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sbCall"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:max="100"
        android:progress="43"
        android:progressBackgroundTint="#00000000"
        android:progressTint="#00000000"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/thumb_call_pixel_default"
        android:thumbOffset="100dp"
        app:layout_constraintBottom_toTopOf="@id/tvInstructionDown"
        app:layout_constraintEnd_toEndOf="@+id/tvInstructionDown"
        app:layout_constraintStart_toStartOf="@+id/tvInstructionDown" />

    <TextView
        android:id="@+id/tvInstructionDown"
        style="@style/Base.TextView"
        android:layout_width="wrap_content"
        android:background="#00000000"
        android:layout_height="wrap_content"
        android:text="Vuot xuong de ket thuc"
        android:textColor="#797979"
        android:layout_marginBottom="15dp"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>